{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "sass css/styles.scss css/styles.css",
            "problemMatcher": {
                "owner": "sass",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/css"
                ],
                "severity": "error",
                "pattern": [
                    {
                        "regexp": " *(.*)",
                        "message": 1
                    },
                    {
                        "regexp": "^.*\\\\(.*\\.scss) (\\d+):(\\d+).*$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ]
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "http-server",
            "dependsOn": [
                "compile"
            ]
        },
        {
            "label": "build and run",
            "dependsOn": [
                "run"
            ]
        },
        {
            "type": "gulp",
            "task": "default",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "gulp",
            "task": "compile",
            "problemMatcher": []
        }
    ]
}